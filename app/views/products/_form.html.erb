<!-- page content -->
<div class="right_col" role="main">
	<div class="">
	    <div class="page-title">
	      <div class="title_left">
	        <h3>Plain Page</h3>
	      </div>
	
	      <div class="title_right">
	        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
	          <div class="input-group">
	            <input type="text" class="form-control" placeholder="Search for...">
	               <span class="input-group-btn">
	                       <button class="btn btn-default" type="button">Go!</button>
	               </span>
	          </div>
	        </div>
	      </div>
	    </div>	
	    <div class="clearfix"></div>				
		<%= form_for(@product) do |f| %>
		  <% if @product.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
		
		      <ul>
		      <% @product.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
			<div class="row">
				  <div class="field">
				    <%= f.label :name %><br>
		    <%= f.text_field :name %>
				  </div>
				  <div class="field">
				    <%= f.label :code %><br>
		    <%= f.text_field :code %>
				  </div>
				  <div class="field">
				    <%= f.label :caegory_id %><br>
		    <%= f.collection_select :caegory_id, Caegory.all, :id, :name, prompt: true  %>
				  </div>
				  <div class="field">
				    <%= f.label :product_type %><br>
		    <%= f.text_field :product_type %>
				  </div>
				  <div class="field">
				    <%= f.label :size %><br>
		    <%= f.text_field :size %>
				  </div>
				  <div class="field">
				    <%= f.label :box_count %><br>
		    <%= f.number_field :box_count %>
				  </div>
				  <div class="field">
				    <%= f.label :ta_count %><br>
		    <%= f.number_field :ta_count %>
				  </div>
				  <div class="field">
				    <%= f.label :img_url %><br>
		    <%= f.text_field :img_url %>
				  </div>
				  <div class="field">
				    <%= f.label :description %><br>
		    <%= f.text_area :description %>
				  </div>
				  <div class="field">
				    <%= f.label :purchase %><br>
		    <%= f.text_field :purchase %>
				  </div>
				  <div class="field">
				    <%= f.label :purchase_tax %><br>
		    <%= f.text_field :purchase_tax %>
				  </div>
				  <div class="field">
				    <%= f.label :supply %><br>
		    <%= f.text_field :supply %>
				  </div>
				  <div class="field">
				    <%= f.label :supply_tax %><br>
		    <%= f.text_field :supply_tax %>
				  </div>
					</div>
			
		  <div class="actions">
		    <%= f.submit %>
		  </div>
		<% end %>
	</div>
</div>